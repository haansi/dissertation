journal = {American journal of human genetics},
keywords = {DNA, Mitochondrial,DNA, Mitochondrial: genetics,Humans,Male,Mutation,Nucleic Acid Conformation,Phylogeny,Prospective Studies,Prostate-Specific Antigen,Prostate-Specific Antigen: blood,Prostatic Neoplasms,Prostatic Neoplasms: genetics,RNA, Transfer,RNA, Transfer: chemistry,RNA, Transfer: genetics},
